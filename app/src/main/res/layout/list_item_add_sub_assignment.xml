<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="36dp"
    android:layout_marginEnd="@dimen/padding_normal"
    android:paddingTop="@dimen/padding_x_small">

    <EditText
        android:id="@+id/edit_sub_assignment_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/hint_sub_assignment_name"
        android:imeOptions="actionDone"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:textSize="@dimen/text_normal"/>

    <ImageButton
        android:id="@+id/btn_save_sub_assignment"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_bg_ripple"
        android:contentDescription="@string/desc_save_sub_assignment"
        android:padding="@dimen/padding_small"
        android:src="@drawable/icv_check_gray_24dp"/>

</LinearLayout>